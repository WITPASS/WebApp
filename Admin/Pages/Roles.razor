@page "/roles"
@inherits RolesComponent

<BasePage Title="Roles" Items="@Items" Item="@Item" OnAdd="@Add" OnEdit="@((Role e)=>Edit(e))" OnDelete="@((Role e)=>DeleteAsync(e))"
          Summary="Roles are assigned to registered users." OnFormSave="@SaveAsync" OnFormCancel="@CancelAsync">
    <TableHeader>
        <th>Name</th>
        <th>Description</th>
    </TableHeader>
    <TableBody Context="item">
        <td>@item.Name</td>
        <td>@item.Description</td>
    </TableBody>
    <FormBody Context="item">
        <div class="form-group">
            <label class="text-primary">Name</label>
            <InputText bind-Value="@item.Name" Class="form-control" />
        </div>
        <div class="form-group">
            <label class="text-primary">Description</label>
            <InputTextArea bind-Value="@item.Description" Class="form-control" />
        </div>
    </FormBody>
</BasePage>