@page "/images"
@inherits ImagesComponent
    <BasePage Title="Images" Items="@items" Item="@item" OnAdd="@Add" OnEdit="@((Image e)=>Edit(e))" OnDelete="@((Image e)=>DeleteAsync(e))"
              Summary="Central image collection to provide images for offers, categories and products etc." OnFormSave="@SaveAsync" OnFormCancel="@CancelAsync">
        <TableHeader>
            <th>Name</th>
            <th>Width</th>
            <th>Height</th>
            <th>Meta</th>
            <th>Active</th>
        </TableHeader>
        <TableBody Context="item">
            <td>@item.Name</td>
            <td>@(item.Width)px</td>
            <td>@(item.Height)px</td>
            <td>@item.Meta</td>
            <td>@item.Active</td>
        </TableBody>
        <FormBody Context="item">
            <div class="form-group">
                <label class="text-primary">Name</label>
                <InputText bind-Value="@item.Name" Class="form-control" />
                <small>Does not show on front-end</small>
            </div>
            <div class="form-group">
                <label class="text-primary">Title</label>
                <InputText bind-Value="@item.Title" Class="form-control" />
            </div>
            <div class="form-group">
                <label class="text-primary">Description</label>
                <InputTextArea bind-Value="@item.Description" Class="form-control" />
            </div>
            <div class="form-group">
                <label class="text-primary">Width (px)</label>
                <input type="number" bind="@item.Width" readonly class="form-control" />
            </div>
            <div class="form-group">
                <label class="text-primary">Height (px)</label>
                <input type="number" bind="@item.Height" readonly class="form-control" />
            </div>
            <div class="form-group">
                <label class="text-primary">Meta</label>
                <input type="text" bind="@item.Meta" readonly class="form-control" />
                <small>Does not show on front-end</small>
            </div>
            <div class="form-group">
                <InputImage bind-Data="@item.Data" bind-Meta="@item.Meta" bind-Width="@item.Width" bind-Height="@item.Height" />
            </div>
        </FormBody>
    </BasePage>